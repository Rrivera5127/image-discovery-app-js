{
  "userAddCatalogMode": false,
  "imageQueryLayers": [

  ],
  "imageDiscoveryQueryFields": [
  ],
  "imageQueryResultDisplayFields": [
    {
      "field": "OBJECTID",
      "label": "id",
      "filter": {
        "enable": false
      },
      "gridOptions": {
        "hiddenOnDisplay": true
      }
    },
    {
      "field": "Folder",
      "label": "Event/Tag",
      "filter": {
        "enable": true
      },
      "gridOptions": {
        "canHide": true
      }
    },
    {
      "field": "AcquisitionDate",
      "label": "Acquisition",
      "filter": {
        "enable": true
      },
      "gridOptions": {
        "canHide": true
      }
    },
    {
      "field": "LowPS",
      "label": "GSD",
      "filter": {
        "enable": true
      },
      "gridOptions": {
        "canHide": true
      }
    },
    {
      "field": "CloudCover",
      "label": "Cloud Cover",
      "filter": {
        "enable": true,
        "unitsLabel": "%"
      },
      "gridOptions": {
        "canHide": true
      }
    },
    {
      "field": "Tag",
      "label": "Tag",
      "filter": {
        "enable": true
      },
      "gridOptions": {
        "canHide": true
      }
    }
  ],
  "popupConfiguration": {
    "displayFields": [
      "Folder",
      "AcquisitionDate",
      "CloudCover"
    ]
  },
  "resultsFormatting": {
    "displayFormats": {
      "date": "dd-MM-yyyy"
    },
    "floatPrecision": 1
  },

  "searchConfiguration": {
    "allowCheckAllSearchResultThumbnails": false
  },
  "exportConfiguration": {
    "image": {
      "height": 800,
      "width": 600
    },
    "footprints": {
      "task": {
        "url": "//SERVER_NAME/arcgis/rest/services/Tasks/DiscoveryViewerTools/GPServer/reportGenerator",
        "featureInputParameter": "Input_JSON_String",
        "outputUrlParameter": "Report_URL",
        "isAsync": true
      }
    },
    "imageryDownload": {
      "task": {
        "url": "//SERVER_NAME/arcgis/rest/services/Tasks/DiscoveryViewerTools/GPServer/DiscoveryDownloader",
        "downloadItemInputParameter": "inputJson",
        "outputUrlParameter": "outputZip",
        "isAsync": true
      }
    }
  },
  "utmLookup": {
    "url": "config/data/utm/UTMWKIDLookup.json"
  },
  "reporting": {
    "disableWebMapReports": false,
    "html": {
      "templateURL": "templates/htmlReport.html"
    },
    "pdf": {
      "exportWebMapTaskURL": "http://SERVER_NAME/arcgis/rest/services/Utilities/PrintingTools/GPServer/Export%20Web%20Map%20Task",
      "mapSize": {
        "height": 500,
        "width": 500
      },
      "mapDPI": 96,
      "preserveMapScale": false,
      "layoutOptions": {
        "showAttribution": false
      }
    }
  }
}
